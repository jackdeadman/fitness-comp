<% provide(:title, "Listing acitivty_types") %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Emoji</th>
      <th>Measure</th>
      <th>Time conversion</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @acitivty_types.each do |acitivty_type| %>
      <tr>
        <td><%= acitivty_type.name %></td>
        <td><%= acitivty_type.emoji %></td>
        <td><%= acitivty_type.measure %></td>
        <td><%= acitivty_type.time_conversion %></td>
        <td>
          <div class="btn-group">
            <%= link_to acitivty_type, class: "btn btn-xs btn-default" do %>
              <%= fa_icon("eye", text: "Show") %>
            <% end %>
            <%= link_to edit_acitivty_type_path(acitivty_type), class: "btn btn-xs btn-default" do %>
              <%= fa_icon("pencil", text: "Edit") %>
            <% end %>
            <%= link_to acitivty_type, class: "btn btn-xs btn-danger", method: :delete, data: { confirm: "Are you sure you want to delete this acitivty_type?" } do %>
              <%= fa_icon("trash-o", text: "Destroy") %>
            <% end %>
          </div>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_acitivty_type_path, class: "btn btn-default" do %>
  <%= fa_icon("plus", text: "New Acitivty type") %>
<% end %>
